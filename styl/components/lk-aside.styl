aside
    width 280px
    flex-grow 0
    margin 0 0 0 20px
    .title:first-child
        padding-top 0
    .title
        padding 30px 0 15px

.profil
    li
        &:nth-child(1)
            background url("../img/profil_bg.png") bottom no-repeat
            align-items center
            padding 20px
            border 1px solid #f5f5f5
            height 110px
            border-radius 4px 4px 0 0
            .avatar
                width 70px
                height 70px
                border 1px solid #f5f5f5
            .name
                padding 10px
                p
                    font-weight 300
                    font-size 18px
                    font-family WhitneyLight
                    margin 5px 10px 10px
                    span
                        font-weight 600
                    &:nth-child(2)
                        font-family WhitneySemiBold
                        font-weight 600
                        font-size 12px
        &:nth-child(2)
            padding 26px 30px
            background $grey
            color #0a263e
            p
                line-height 24px
                letter-spacing 0.45px
                span
                    margin-left 3px
        .button
            background #254367
            border-radius 0 0 5px 5px

.nav-lk
    border: 1px solid rgba(169, 183, 197,  0.14);
    border-bottom 0
    a
        padding: 0 17px;
        color: #555555;
        border: 1px solid rgba(169, 183, 197,  0.14);
        display: block;
        font-size: 13px;
        line-height: 60px;
        &:last-child
            border-radius 0 0 5px 5px
        &:hover, &:active
            color $blue
            border-bottom 1px solid $blue
            p
                &:nth-child(1)
                    color $blue
        p
            &:nth-child(1)
                color #a9b7c5
                font-size 20px
                margin 0 8px 0 5px

.autoriz
    background $grey
    padding 10px 20px
    &_label
        position absolute
        display inline-block
        right 10px
        top 50%
        transform translateY(-50%)
        a
            font-size: 12px;
            color black
    li
        margin 10px 0
        position relative
        .b-white
            margin-right 10px

.aside-news
    margin-top: 0px;
    background $grey

.b-znanii
    text-align left
    li
        
        padding: 12px 22px 17px 0;
        .news_text
            margin-top: 8px;
            margin-bottom: -15px;
        // .date
        //     padding-top: 12px;
        //     margin-bottom: -1px;
        &:last-child
            border-bottom 1px solid rgba(169, 183, 197, 0.3);
        a
            font-family WhitneySemiBold
            font-size: 14px
.news_block1_colum
    .date
        display: inline-flex;
        margin: 5px 0;
        color: #a9b7c5;
        line-height: 12px;
        padding: 18px 10px 6px 0;
        font-family: WhitneyMedium;
        border-radius: 5px;
        font-size: 12px;
        letter-spacing: .3px;
.news_block2_colum
    h4 
        color: #0a263e;
        font-size: 17px;
        font-family: 'WhitneyMedium';
        line-height: 1.3;
        letter-spacing: -0.4px;
    .news-text
        flex-grow: 1;
        margin: 15px 0 0;
        font-family: 'WhitneyLight';
        font-size: 15px;

h3
    font-family: 'Whitney';
    font-size: 23px;
    line-height: 30px;
    color: #0a263e;
    padding: 15px 0 24px 1px;
    font-family: 'WhitneyMedium';
.news_text
    padding: 0 0 15px;
    font-family: 'WhitneyMedium';
    // font-weight: 600;

.aside-comment
    background $grey
    text-align left
    color black
    li
        border none
        &:last-child
            border-top 1px solid rgba(169, 183, 197, 0.3);
            text-align center

.aside-message
    background $white
    border-radius 5px
    position relative
    padding 15px 10px
    font-size 12px
    color #889096
    overflow visible
    border 1px solid rgba(169, 183, 197, 0.3);
    margin-top 15px
    &:after
        content: "";
        background $white
        height: 16px;
        position: absolute;
        border-bottom 1px solid rgba(169, 183, 197, 0.3);
        border-right 1px solid rgba(169, 183, 197, 0.3);
        transform: rotate(225deg);
        left 25px
        top: -9px
        width: 16px;

.client-info
    &.dark
        color #ccd6dd
        .comment-date
            p
                color #a4b7c6

.statist
    background $grey
    color #777777
    font-size 12px
    li
        display flex
        justify-content space-between
        align-items center
        &:last-child
            border-top 1px solid rgba(169, 183, 197, 0.3);
        p
            &:last-child
                flex-shrink 0
                font-size 14px
                display flex
                background $white
                width 40px
                height 40px
                align-items center
                justify-content center
                border-radius 100%
                color $blue

.course
    background $grey
    li
        display flex
        justify-content space-between
        align-items center
        font-size 12px
        padding 5px 30px 5px 20px
        div
            p
                margin-top .7em
                margin-bottom .7em
            &:nth-child(1)
                p
                    &:nth-child(1)
                        color #777777
                        font-family WhitneySemiBold
                    &:nth-child(2)
                        color #a4b7c6
                        font-size 10px
            &:nth-child(2)
                p
                    color #777777
.last-exchange
    background $grey
    li
        display flex
        justify-content space-between
        align-items center
        font-size 12px
        padding 10px
        .i-next
            padding 10px
            font-size 14px
            flex-shrink 0
        div
            flex-shrink 0
            &:nth-child(3)
                p
                    &:nth-child(1)
                        text-align right
            p
                margin-top .7em
                margin-bottom .7em
                span
                    margin-left 5px
                    font-family WhitneyLight
            .iz
                display inline-flex
                background #e0e3e6

.lkas-avatar
    width: 100px!important
    height: 70px!important
    border: 1px solid #f5f5f5!important
.idcompl
    width 15px
    height 15px
    background: $green
    border-radius: 50%
    font-size: 7px
    color white