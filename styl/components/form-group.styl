.form-group
  position: relative
  label
    color: #999999;
    font-size 16px
    position: absolute;
    left 20px
    top 50%
    transform translateY(-50%)
  input
    border: 1px solid #dee2e7;
    background-color #ffffff
    border-radius 5px
    padding 0 20px
    &:focus
      border-color #00abec
    &:focus + .tooltip
      visibility: visible
      opacity 1
    &.invalid
      border-color #c20012
    &.invalid + .tooltip
      visibility: visible
      opacity 1
      background-color: #efdadc!important;
      &:after
        border-bottom-color #efdadc!important;
