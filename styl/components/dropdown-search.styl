.dropdown-search
  position relative
  width 400px
  &__selected
    input
      height 50px
      & + .tooltip
        visibility: hidden!important
        opacity:0!important
      &.invalid + .tooltip
        visibility: visible!important
        opacity: 1!important
    .i-next
      position absolute
      right 15px
      font-size 10px
      top 50%
      transform translateY(-50%) rotate(90deg)
    .arrow-active
      .i-next
        transform translateY(-50%) rotate(-90deg)
  &__items
    box-shadow: 0px 0 6px rgba(0, 0, 0, 0.13)
    margin-top: 10px
    display none
    position: absolute
    left 0
    z-index 99
    right: 0
    max-height  160px
    overflow auto
    border-radius 5px
    background-color #ffffff
    &.active
      display: block
  &__item
    cursor pointer
    display: flex
    align-items flex-end
    font-size 14px
    font-weight: 500;
    height 40px
    padding 0 0 10px 15px
    border-color #dee2e7
    border-style solid
    border-width 0 0px 1px 1px
    border-bottom-left-radius 5px
    &:hover
      background-color #afd0ff
    [class*=logo-]
      width 22px
      height 20px
      margin-right 20px
      background-position center
      background-repeat no-repeat
