.recent-questions-FAQ
    width 100%
    margin-bottom: 22px
    .big-text
        text-transform: uppercase
        font-size: 24px
        font-family: Whitney
        margin-top: 44px
        margin-left: 412px
        letter-spacing: -1.1px
    .little-text
        font-size: 13px
        margin-top: 21px
        letter-spacing: -.15px
        margin-bottom: 15px
        margin-left: 283px
        width: 100%

    .questions
        width: 91%
        // width 100%
        margin 8px 33px
        display inline-block
      
        
        .accordion
            height 30px
            border-left 4px #00abec solid
            .stick
                position: sticky
                .arrow
                    position absolute
                    width 10px
                    height 10px
                    margin-left -24px
                    margin-top 10px
                    transition 500ms


            .accordion-title
                text-align left
                margin-left 12px
                padding-top 5px
                padding-top 7px
                letter-spacing 0.1px

            .accordion-content,.accordion-content-active
                overflow-y: hidden
                display: none
                height: 104px
                width: 105%
                color: #49535d
                font-size 13px
                padding-top 8px
                padding-left 11px
                letter-spacing -0.1px
                line-height 1.29
    .questions:hover
        cursor pointer
::-webkit-scrollbar
    width 6px
::-webkit-scrollbar-track
    box-shadow: inset 0 0 1px grey; 
    border-radius: 10px;
::-webkit-scrollbar-thumb
    background: #00abec
    border-radius: 10px
.recent-questions-FAQ
    .questions-block
        margin-top: 50px
        margin-left: 10px
        max-height: 375px
        overflow-y: auto
        height: fit-content
   
    
.divider
    margin-left: 40px
    height 0.7px
    background #d6d6d6
    width: calc(100% - 65px)
.faq-main
    aside
        margin-top: 150px
        padding-left: 10px
