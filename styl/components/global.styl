/*BUTTONS*/
.button-bg
    &-g
        color $white
        background $green
        padding 0 14px
        font-size 12px
        display inline-block
        border-radius 5px
        line-height 20px
        margin-left 10px
        cursor pointer
        &:hover
            background $blue
    &-b
        color $white
        background $blue
        padding 0 14px
        font-size 12px
        display inline-block
        border-radius 5px
        line-height 20px
        margin-left 10px
        cursor pointer
        &:hover
            background $green

.button
    display block
    width 100%
    font-size 12px
    line-height 24px
    padding 13px 20px
    text-align center
    font-family WhitneySemiBold
    &.b-white
        color $blue
        padding 12px 20px
        border 1px solid $blue
        &:hover
            color $white
            background $green
            border 1px solid $green
    &.b-blue
        color $white
        background $blue
        &:hover
            background $green
    &.b-red
        color $white
        background: #c82526;
        &:hover
