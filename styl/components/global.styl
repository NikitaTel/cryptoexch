/*FORMS*/

input[type=checkbox], input[type=radio]
    display none

.input-form
    border 1px solid #dee2e7;
    padding 12px 20px
    background $white
    font-size 16px
    line-height 24px
    color black
    border-radius 5px

input.input-form
    &:valid
        +label
            display: none;
    &:focus
        +label
            display: none;
    &:disabled
        background $grey
        &::-webkit-input-placeholder
            color: $text-grey
        &::-moz-placeholder
            color: $text-grey
        &:-ms-input-placeholder
            color: $text-grey
        &:-moz-placeholder
            color: $text-grey
        &::-webkit-input-placeholder
            color $text-grey

.label-star-red
    position absolute
    display inline-block
    left 20px
    top 50%
    font-size 16px
    transform translateY(-50%)
    color $text-grey

.input-form[type=file]
    padding 9px 20px
    button, a, label
        background red
    &:valid
        opacity 0
        position relative
        z-index 2
        +.file-name
            display: block

.parent-selector
    position relative
    .file-name
        position absolute
        top 0
        left 0
        border 1px solid #dee2e7;
        padding 12px 20px
        font-size 16px
        line-height 24px
        background $white
        color $text-grey
        border-radius 5px
        display none
        height 100%
        width 100%
        overflow hidden
        p
            width 90px
            display flex
            height 100%
            justify-content center
            align-items center
            color $white
            position absolute
            top 0
            right 0
            background $blue
            border-radius 0 5px 5px 0

.user-license
    display flex
    align-items center
    >label
        >p
            font-size 13px
            line-height 17px
    input
        &:checked
            +label
                .agree-ok
                    p
                        display block
                        overflow visible
                        font-size 14px
    .text-b-un
        margin-left 3px

.agree-ok
    flex-shrink 0
    justify-content center
    align-items center
    margin-right 15px
    width 30px
    height 30px
    background $white
    border-radius 5px
    border 1px solid #dee2e7
    color black
    display flex
    p
        display none
