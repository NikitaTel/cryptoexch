.agent-status
    .inline
        display inline-flex
        .offline
            img
                position absolute
                bottom 13px
                width 22px
                left calc(50% - 60px)
                content url("../img/offline.svg")
                animation shine-offline 6s ease-out infinite
                padding: 1px
            a
                position absolute
                bottom 15px
                font-size 14px
                font-family WhitneySemiBold
                left 50%
                transform translateX(-50%)
                &:before
                    display block
                    color red
                   
                    content 'Я offline'
        .online
            img
                position absolute
                bottom 12px
                width 22px
                left calc(50% - 60px)
                content url("../img/online.svg")
                animation shine-online 6s ease-out infinite
                padding: 3px
            a
                position absolute
                bottom 14px
                font-size 14px
                font-family WhitneySemiBold
                left 50%
                transform translateX(-50%)
                &:before
                    display block
                    color #00ae00
                    content 'Я online'
@keyframes shine-online 
    
    0%
        background #b1ed6238
        border-radius 106px
    
    33%
        background #97d44759
        border-radius 106px
    50%
        background #b1ed62
        border-radius 106px
    100%
        background #b1ed6252
        border-radius 106px
@keyframes shine-offline
    
    0%
        background #ff000000
        border-radius 106px
    
    33%
        background #ff00006b
        border-radius 106px
    50%
        background #ff00006e
        border-radius 106px
    100%
        background #ff000010
        border-radius 106px
       
