#menu__toggle, #menu__toggle2
  opacity 0
  &:checked
    & ~ .menu__btn
      & > span
        transform rotate(45deg)
        &::before
          top 0
          transform rotate(0)
        &::after
          top 0
          transform rotate(90deg)
.menu-toggle
  opacity 0.8
  visibility visible !important
  right 0 !important
  z-index 5


.menu__btn
  display flex
  align-items center
  width 26px
  height 26px
  cursor pointer
  z-index 1
  position relative
  & > span
    &::before
      content ''
      top -8px
    &::after
      content ''
      top 8px

.menu__btn > span,
.menu__btn > span::before,
.menu__btn > span::after
  display block
  position absolute
  width 100%
  height 2px
  background-color #ffffff
  transition-duration .25s

.menu__box
  display block
  position absolute
  visibility hidden
  top 0
  right -100%
  width 100%
  height 100%
  margin 0
  padding 100px 0 0
  list-style none
  text-align center
  background-color #020305
  box-shadow 1px 0px 6px rgba(0, 0, 0, .2)
  transition-duration .25s

.footer .menu__box
  padding 65px 0 0

.menu__item
  display block
  padding 12px 24px
  color #ffffff
  font-family 'Roboto', sans-serif
  font-size 20px
  font-weight 600
  text-decoration none
  transition-duration .25s
  text-align right
  &:hover
    color #00abec
    text-decoration underline

.hamburger-menu
  display none
  position relative
  z-index 6

.footer
  position relative
  .hamburger-menu
    position absolute
    right 20px
    span
      background-color #0a263e
      &:after, &:before
        background-color #0a263e
.user-icon
  margin-right 15px
  width 30px
  height 30px

@media screen and (max-width: 1200px)
  .hamburger-menu
    display block