@media screen and (max-width: 1200px)
    body, .reserve_all .main-content, .change, .main-content
        min-width auto
        width: auto
    .news
        &_block1, &_block2, &_block3
            width 100%
        &-img-s news2_1
            width 100%
            height 100px
        &_block3
            background transparent
            li
                display none
                &:nth-child(4)
                    display list-item
        &-more2
            font-size 18px
            padding 5px 0 1px 0
            border-bottom 1px solid #00abec
    .reserves-slider
        width 89%
        .i-next
            color #ffffff !important
            font-size 16px
        &__container
            width 100%
        &__slide
            padding 5px 7px
            .pm-text
                > span
                    margin-bottom 12px
                p
                    display flex
                    flex-direction column
                    margin 0 !important
                    .second-val
                        margin-left 0 !important
                    span
                        margin 6px 0
    .exchange
        width 100%
        &-bg:before
            display none
        &_list
            width 100%
            max-width 580px
            margin auto
            overflow hidden
            ul li
                &.flag
                    width auto
                    p
                        &:nth-child(3)
                            width auto !important
                            font-size 14px
                            padding-right 5px
                        &:nth-child(2)
                            padding 0 12px
                &:nth-child(3)
                    padding 0 7px
    .iz span
        padding 0 6px
    .cipher
        font-size 14px !important
        width auto !important
    .news-img-b
        width 38%
    .advantages
        .flex-sb
            flex-wrap wrap
            flex-direction row
            padding 0 15px
            max-width: 400px;
            margin auto !important
        &_list
            width 150px
    .cookie
        height auto
        padding-bottom 20px
        &-text
            margin 0
            p
                padding-right 10px
        &-content
            margin-left 20px
            width 89%
        &-button
            margin-left 21%
            top 40%
    .change.flex-sb
        display flex
        flex-direction column