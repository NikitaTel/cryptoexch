.main-content
    padding 50px 0
    width 1180px
    margin auto
    .title
        margin-bottom 45px
.give-title
    background rgba(235, 241, 247, 0.45)
    border 1px solid #ebf1f7
    border-radius 5px 5px 0 0
.change
    padding 9px 0 89px
    width 1180px
    margin auto
    h2
        margin 0 0 37px
    &_give
        h2
            font-size 18px
            line-height 18px
            font-family Whitney
            color #0a263e
            position relative
            display inline-block
            margin: 13px -31px 13px 11px
            padding-left: 10px

            &:after
                content ''
                height 30px
                position absolute
                top -8px
                left -48px
                width 30px
                background: rgba(0, 0, 0, 0) url("../img/shape_1.png") no-repeat scroll center center;
    &_get
        h2
            font-size 18px
            line-height 18px
            font-family Whitney
            color #0a263e
            position relative
            display inline-block
            margin 15px 0 12px
            &:after
                content ''
                height 30px
                position absolute
                top -8px
                left -40px
                width 30px
                background: rgba(0, 0, 0, 0) url("../img/shape_2.png") no-repeat scroll center center;
