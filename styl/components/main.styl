.rc-grid
    .new-exchange
        transform: translateY(-100px)
        animation:
            add-exchange-animation 2s ease 0s forwards
    .remove-exchange
        animation: remove-exchange-animation 2s ease 0s forwards

@keyframes add-exchange-animation {
    from{
        height: 0;
    }
    to {
        height: auto;
        transform: translateY(0);
    }
}

@keyframes remove-exchange-animation {
    to {
        height: 0;
        transform: translateY(100px);
    }
}

@media screen and (max-device-width: 1024px)
    .recent-exchanges
        display none;

