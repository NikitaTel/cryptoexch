.reserves-slider
    width 1130px
    display flex
    margin auto
    overflow hidden
    &__container
        width 1180px
        margin auto
        position relative
        overflow hidden
    &__wrapper
        display flex
        flex 0 0 auto
        flex-wrap wrap
    &__next-el, &__prev-el
        position absolute
        color #adb4c1!important
        top 50%
        cursor pointer
    &__prev-el
        left: 0;
        transform: rotate(180deg) translateY(50%);
    &__next-el
        right: 0;
        transform: translateY(-50%);
    .i-next
        font-size: 18px
        color white
    &__slide
        width 261px
        display flex
        justify-content flex-start
        padding 5px 15px
        align-items center
        border-radius 5px
        background rgba(235, 241, 247, 0.9)
        .pm_icon
            margin-right 20px
        &.reserve1
            width: 266px
            margin: auto
        &.reserve2
            width: 266px
            margin: auto
            margin-top: 17px
            margin-bottom: 10px
        &.reserve1, &.reserve2
            background: white!important
            border-radius: 3px!important
        &.reserve1
            .second-val:first-child
                margin-left: 0px!important
            .second-val
                margin-top: .1em!important

                font-weight: 100!important
                font-family: Whitney!important
                margin-left: 21px!important
                font-size: 11px!important

        .pm-text
            p
                margin-top: 0.6em!important
        &.reserve2
            .second-val
                margin-top: .1em!important
                margin-left: 21px!important
                font-weight: 100!important
                font-size: 11px!important
                font-family: Whitney!important
            .second-val:first-child
                margin-left: 0px!important

