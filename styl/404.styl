.main-bg
  position relative
  // height 100%
  // min-height 450px
  display flex
  align-items center
  justify-content center
  border-bottom 2px solid $blue
  border-top 2px solid $blue
  &:before
    position absolute
    opacity 0.15
    content ''
    display block
    z-index -1
    left 0
    top 0
    height 100%
    width 100%
    background url("../img/404.png")
    background-position center
    background-size cover
.centr
  text-align center
  color #0a263e
  min-height 500px
  h2
    font-size 200px
    letter-spacing 5px
    font-family Whitney-Black
  p
    font-size 22px
    letter-spacing -0.5px
    padding-top 25px
    font-family Whitney
  .button
    display inline-block
    margin-top 65px
    width 220px
    font-size 12px
    line-height 24px
    padding 13px 20px
    text-align center
    font-family WhitneySemiBold
    &.b-blue
      color $white
      background $blue
      &:hover
        background $green

